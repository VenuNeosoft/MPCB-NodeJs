<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Field Officers</title>
  <link rel="stylesheet" href="/css/field.css">
</head>
<body>
  <div class="container">
    <nav class="sidebar">
      <h2>Admin Panel</h2>
      <ul>
        <li><a href="/admin/dashboard">Dashboard</a></li>
        <li><a href="/admin/complaints">Complaints</a></li>
        <li><a href="/admin/supervisors">Supervisors</a></li>
        <li><a href="/admin/field-officers">Field Officers</a></li>
        <li><a href="/admin/settings">Settings</a></li>
        <li><a href="/admin/logout">Logout</a></li>
      </ul>
    </nav>

    <div class="main-content">
      <h1>Field Officers</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% fieldOfficers.forEach((officer) => { %>
                <tr>
                  <td><%= officer.firstName %> <%= officer.lastName %></td>
                  <td><%= officer.email %></td>
                  <td><a href="/admin/field-officers/<%= officer._id %>/edit">Edit</a></td>
                </tr>
              <% }); %>
              
        </tbody>
      </table>
    </div>
  </div>

  <script src="/scripts.js"></script>
</body>
</html>
